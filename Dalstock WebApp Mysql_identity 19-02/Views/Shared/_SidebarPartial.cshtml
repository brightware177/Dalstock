                            <span class="arrow"></span>
                        </a>
                        <ul class="sub-menu">
                            <li class="nav-item">
                                <a href="@Url.Action("Index", "Debit")" class="nav-link nav-toggle">
                                    <i class="material-icons">remove_circle</i>
                                    <span class="title">Verbruik</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Index", "Deposit")" class="nav-link nav-toggle">
                                    <i class="material-icons">add_circle</i>
                                    <span class="title">Toevoegen</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Index", "Item")" class="nav-link ">
                                    <span class="title">Mijn materialen</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Create", "Item")" class="nav-link ">
                                    <span class="title">Nieuw materiaal</span>
                                </a>
                            </li>
